FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Expose port 4000
EXPOSE 4000

# Set environment variable for port
ENV PORT=4000

# Run the application on port 4000
CMD ["npm", "run", "dev", "--", "-p", "4000"]
